{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-undef": 0,
    "no-unused-vars": 0
  },
    "max-line-length": [
			true,
			{
				"limit": 140,
				"ignore-pattern": "^import |^export {(.*?)}"
			}
		],
		"no-return-await": true,
		"jsdoc-format": [true, "check-multiline-start"],
		"no-redundant-jsdoc": true,
		"arrow-parens": false,
		"no-irregular-whitespace": true,
}
